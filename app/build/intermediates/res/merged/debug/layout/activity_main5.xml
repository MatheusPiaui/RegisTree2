<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.registree.registree.Main5Activity">

    <TextView
        android:id="@+id/textViewCategoria"
        android:layout_width="157dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:accessibilityLiveRegion="none"
        android:autoSizeMaxTextSize="@android:dimen/dialog_min_width_minor"
        android:text="Bairro Teste"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewEndereco"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textViewEndereco"
        android:layout_width="157dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:accessibilityLiveRegion="none"
        android:autoSizeMaxTextSize="@android:dimen/dialog_min_width_minor"
        android:text="Bairro Teste"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescricao"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="51dp" />

    <ImageView
        android:id="@+id/imageViewDenuncia"
        android:layout_width="0dp"
        android:layout_height="138dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_report_image"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:accessibilityLiveRegion="none"
        android:autoSizeMaxTextSize="@android:dimen/dialog_min_width_minor"
        android:text="TÍTULO DA DENÚNCIA"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        android:visibility="visible"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewEndereco"
        android:layout_marginStart="16dp"
        android:layout_marginTop="147dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="148dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewDenuncia" />

    <TextView
        android:id="@+id/textViewDescricao"
        android:layout_width="0dp"
        android:layout_height="119dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum interdum nibh nulla, in ornare sapien volutpat a. Quisque justo sapien, blandit quis pellentesque id, tristique non nibh. Nullam posuere aliquam est. Aliquam erat volutpat. Vivamus ligula nunc, dictum ut orci id, volutpat pulvinar ligula. "
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDenuncia"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnConfirmarDenuncia"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorAccent"
        android:onClick="salvar"
        android:text="Confirmar denuncia"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
