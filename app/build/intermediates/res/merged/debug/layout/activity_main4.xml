<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.registree.registree.Main4Activity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageViewFoto"
        android:layout_width="371dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnGaleria"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintRight_toRightOf="@+id/btnGaleria"
        android:layout_marginTop="9dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="11dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnGaleria"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/btnGaleria"
        android:layout_width="152dp"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorAccent"
        android:elevation="0dp"
        android:onClick="mostrarGaleria"
        android:text="Inserir uma imagem"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnFoto"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btnFinalizar"
        android:layout_width="59dp"
        android:layout_height="41dp"
        android:layout_marginEnd="6dp"
        android:background="@color/colorAccent"
        android:onClick="chamarTela5"
        android:text="OK"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="2dp"
        tools:layout_editor_absoluteY="468dp"
        tools:layout_editor_absoluteX="319dp" />

    <Button
        android:id="@+id/btnFoto"
        android:layout_width="152dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="219dp"
        android:background="@color/colorAccent"
        android:onClick="tirarFoto"
        android:text="Tirar Foto"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnFinalizar"
        app:layout_constraintLeft_toRightOf="@+id/btnGaleria"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />


</android.support.constraint.ConstraintLayout>
