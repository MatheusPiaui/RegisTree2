<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.registree.registree.Main5Activity">

    <TextView
        android:id="@+id/textViewCategoria"
        android:layout_width="335dp"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:accessibilityLiveRegion="none"
        android:autoSizeMaxTextSize="@android:dimen/dialog_min_width_minor"
        android:text="Bairro Teste"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitulo" />

    <TextView
        android:id="@+id/textViewEndereco"
        android:layout_width="338dp"
        android:layout_height="59dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:accessibilityLiveRegion="none"
        android:autoSizeMaxTextSize="@android:dimen/dialog_min_width_minor"
        android:text="Bairro Teste"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescricao"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.318" />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="351dp"
        android:layout_height="48dp"
        android:layout_marginBottom="222dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:accessibilityLiveRegion="none"
        android:autoSizeMaxTextSize="@android:dimen/dialog_min_width_minor"
        android:text="TÍTULO DA DENÚNCIA"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textViewEndereco"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/textViewDescricao"
        android:layout_width="354dp"
        android:layout_height="178dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum interdum nibh nulla, in ornare sapien volutpat a. Quisque justo sapien, blandit quis pellentesque id, tristique non nibh. Nullam posuere aliquam est. Aliquam erat volutpat. Vivamus ligula nunc, dictum ut orci id, volutpat pulvinar ligula. "
        android:textSize="16dp"
        android:layout_marginLeft="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCategoria" />

    <Button
        android:id="@+id/btnConfirmarDenuncia"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorAccent"
        android:onClick="salvar"
        android:text="Confirmar denuncia"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
